@model IEnumerable<Igreja.Com.Dominio.Entidades.Despesa>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title ">Despesas</h4>
                    <div class="row">
                        <p class="card-category">
                            <a asp-action="Create" asp-controller="Despesa">
                                <i class="material-icons">add</i>Novo Despesa
                            </a>
                        </p>
                    </div>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="text-primary">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.categoriaDespesa.Descricao)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DestinoDespesa)
                                    </th>
                                  
                                    <th>
                                        @Html.DisplayNameFor(model => model.dateTime)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.categoriaDespesa.Descricao)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DestinoDespesa)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.dateTime)
                                        </td>
                                        <td class="td-actions text-right">
                                            <button type="button" rel="tooltip" title="Editar Despesa" class="btn btn-primary btn-link btn-sm">
                                                <a asp-action="Edit" asp-route-id="@item.Id"><i class="material-icons">edit</i>Editar  </a>
                                            </button>
                                            <button type="button" rel="tooltip" title="Remove Despesa" class="btn btn-danger btn-link btn-sm">
                                                <i class="material-icons">close</i><a asp-action="Delete" asp-route-id="@item.Id">Remover</a>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>