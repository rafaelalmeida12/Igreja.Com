@model Membro
@using Igreja.Com.Dominio.Entidades.Enum

@{
    ViewData["Title"] = "Cadastro de Membro";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header card-header-primary">
                    <h4 class="card-title">Cadastro de Membros</h4>
                </div>
                <div class="card-body">
                    <form id="frmMembro" asp-action="Create">
                        <div class="row">
                            <div class="col-md-8">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group bmd-form-group">
                                    <label asp-for="Nome" class="bmd-label-floating"></label>
                                    <input asp-for="Nome" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group bmd-form-group">
                                    <label asp-for="DataNascimento" class="control-label"></label>
                                    <input asp-for="DataNascimento" type="date" class="form-control" />
                                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group bmd-form-group">
                                    <select asp-for="Sexo" class="form-control" asp-items="Html.GetEnumSelectList<TipoSexo>()">
                                        <option selected="selected" value="">Sexo</option>
                                    </select>
                                    <span asp-validation-for="Sexo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group bmd-form-group">
                                    <select asp-for="EstadoCivil" class="form-control" asp-items="Html.GetEnumSelectList<TipoEstadoCivel>()">
                                        <option selected="selected" value="">Estado Civil</option>
                                    </select>
                                    <span asp-validation-for="EstadoCivil" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group bmd-form-group">
                                    <select asp-for="IgrejaId" class="form-control" asp-items="ViewBag.Igrejas">
                                        <option selected="selected" value="">Igrejas</option>
                                    </select>
                                    <span asp-validation-for="IgrejaId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group bmd-form-group">
                                    <label asp-for="Cpf" class="bmd-label-floating"></label>
                                    <input asp-for="Cpf" class="form-control" />
                                    <span asp-validation-for="Cpf" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group bmd-form-group">
                                    <label asp-for="RG" class="bmd-label-floating"></label>
                                    <input asp-for="RG" class="form-control" />
                                    <span asp-validation-for="RG" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group bmd-form-group">
                                    <label asp-for="Telefone" class="bmd-label-floating"></label>
                                    <input asp-for="Telefone" class="form-control" />
                                    <span asp-validation-for="Telefone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label asp-for="Profissão" class="bmd-label-floating"></label>
                                    <input asp-for="Profissão" class="form-control" />
                                    <span asp-validation-for="Profissão" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label asp-for="Email" class="bmd-label-floating"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group bmd-form-group">
                                    <label asp-for="Celular" class="bmd-label-floating"></label>
                                    <input asp-for="Celular" class="form-control" />
                                    <span asp-validation-for="Celular" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group bmd-form-group">
                                    <select asp-for="Escolaridade" class="form-control" asp-items="Html.GetEnumSelectList<TipoEscolaridade>()">
                                        <option selected="selected" value="">Escolaridade</option>
                                    </select>
                                    <span asp-validation-for="Escolaridade" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group bmd-form-group">
                                    <label asp-for="Curso" class="bmd-label-floating"></label>
                                    <input asp-for="Curso" class="form-control" />
                                    <span asp-validation-for="Curso" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group bmd-form-group">
                            <label class="control-label">Batizado</label>
                            <select asp-for="DadosMinisteriais.TipoBatizado" asp-items="Html.GetEnumSelectList<TipoBatizado>()" class="form-control">
                                <option selected="selected" value="">Batizado</option>
                            </select>
                            <span asp-validation-for="DadosMinisteriais.TipoBatizado" class="text-danger"></span>
                        </div>
                        <textarea class="form-control" rows="1"></textarea>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label asp-for="Endereco.Rua" class="bmd-label-floating"></label>
                                    <input asp-for="Endereco.Rua" class="form-control" />
                                    <span asp-validation-for="Endereco.Rua" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label asp-for="Endereco.Numero" class="bmd-label-floating"></label>
                                    <input asp-for="Endereco.Numero" class="form-control" />
                                    <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label asp-for="Endereco.Bairro" class="bmd-label-floating"></label>
                                    <input asp-for="Endereco.Bairro" class="form-control" />
                                    <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group bmd-form-group">
                                    <label asp-for="Endereco.Complemento" class="bmd-label-floating"></label>
                                    <input asp-for="Endereco.Complemento" class="form-control" />
                                    <span asp-validation-for="Endereco.Complemento" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input id="adicionarmembro" type="submit" value="Gravar" class="btn btn-primary pull-right" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
