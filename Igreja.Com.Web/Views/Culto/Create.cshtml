@model Igreja.Com.Dominio.Entidades.Culto

<h4>Culto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MembroId" class="control-label"></label>
                <input asp-for="MembroId" type="search" list="listMembro" class="form-control" />
                <datalist id="listMembro">
                    @foreach (var item in ViewBag.Membros)
                    {
                        <option>@item.Nome</option>

                    }
                </datalist>
                <span asp-validation-for="MembroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ofertas" class="control-label"></label>
                <input asp-for="Ofertas" class="form-control" />
                <span asp-validation-for="Ofertas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dizimos" class="control-label"></label>
                <input asp-for="Dizimos" class="form-control" />
                <span asp-validation-for="Dizimos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateTime" class="control-label"></label>
                <input asp-for="dateTime" type="hidden" class="form-control" />
                <span asp-validation-for="dateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                        <span class="nav-tabs-title">Adicionar</span>
                        <ul class="nav nav-tabs" data-tabs="tabs">
                            <li class="nav-item">
                                <a class="nav-link active" href="#profile" data-toggle="tab">
                                    <i class="material-icons">code</i> Ofertas
                                    <div class="ripple-container"></div>
                                </a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="profile">
                        <input type="button" value="Incluir Novo Usuário" class="btn btn-primary" onclick="ObjetoSistema.IncluirNovousuario()" />
                        <table class="table">
                            <tbody id="tabelaUsuario"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

