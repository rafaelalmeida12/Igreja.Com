@model IEnumerable<Igreja.Com.Dominio.Entidades.Cargo>

@{
    ViewData["Title"] = "Index";
}


@if (Model.Count() != 0)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Cargos</h4>
                        <div class="row">
                            <p class="card-category">
                                <a asp-action="Create" asp-controller="Cargos">
                                    <i class="material-icons">add</i>Novo Cargo <div class="ripple-container"></div>
                                </a>
                            </p>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="text-primary">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Descricao)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descricao)
                                            </td>
                                            <td class="td-actions text-right">
                                                <button type="button" rel="tooltip" title="Editar Cargo" class="btn btn-primary btn-link btn-sm">
                                                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="material-icons">edit</i>Editar  </a>
                                                </button>
                                                <button type="button" rel="tooltip" title="Remove Cargo" class="btn btn-danger btn-link btn-sm">
                                                    <i class="material-icons">close</i><a asp-action="Delete" asp-route-id="@item.Id">Remover</a>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h1>nada cadastrador</h1>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
